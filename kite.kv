<kite>:
	buchen:buchen
	buchbut:buchbut
	liste:liste
	kite:kite
	
	tage:tage
	stunden:stunden
	geraete:geraete
	tag:tag
	stunde:stunde
	geraet:geraet
	kite: kite.__self__
	
	Accordion:
		id:kite
		orientation: 'vertical'
		AccordionItem:
			id:tag
			title: "Tag"
#				on_touch_down: app.aktualisiereNeuerTermin(self,root)
			GridLayout:
				id:tage
				spacing: "2dp"
				cols: 2
				Button:
					text: 'Montag 01.10'
					on_release: app.setzeTag(self)
		AccordionItem:
			title: "Stunde"
			id:stunde
#				on_touch_down: app.aktualisiereNeuerTermin(self,root)
			GridLayout:
				id:stunden
				spacing: "2dp"
				cols: 3

		AccordionItem:
			title: "Geraet"
			id:geraet
#			on_touch_down: app.aktualisiereGeraete(self)
			GridLayout:
				id:geraete
				spacing: "2dp"
				cols: 3
		AccordionItem:
			id:buchen
			title: "Ãœbersichten"
			markup: True
			Button:
				text:"lange Liste"
				on_release:app.langeListe()
			Button:
				id:buchbut 
				text:"Zweispaltig (nofunc)"
				markup: True 
				on_release: app.wechseln()
			Button:
				text: "Tages Tabelle (nofunc)"
				on_release: app.wechseln2()

		AccordionItem:
			title: "Meine Buchungs-Daten"
			BoxLayout:
				id: liste
				orientation: 'vertical'
				collapse:False
				Button:
					text: 'Montag, 01.10., 3.Stunde HZ5 Klasse 7A '
					markup: True
					on_release: app.but=self;app.loesche()

<addon>:
	
	name:name
	namelong:namelong
	password:password
	addon:addon
	bucher:bucher.__self__
	login:login
	BoxLayout:
		orientation: 'vertical'
		id:addon
		Label:
			canvas.before:
				Color:
					rgb: 0.5490196078431373, 0.7019607843137254, 0.8156862745098039
				Rectangle:
					pos: self.pos
					size: self.size
			text: '[color=#ffff00][size=50][b]Snow Kite School[/b][/size][/color]'
			markup: True
			# background_color:(0.6,0.7,0.9,1)
			background_color: (0,1,1,1)
		Image:
			source: 'samstag.jpg'
			size_hint: (None, None)
			size: 800,170
		Button:
			text:'lange Liste gucken'
			on_release: app.langeListe()
		BoxLayout:
			id:login
			orientation: 'horizontal'
			TextInput:
				id:namelong
				text:'Fred Feuerstein'
			TextInput:
				id:name
				text:'Fr'
			TextInput:
				id:password
				text:'1234'
				password:True
		Button:
			text:'Login'
			on_release: app.configure(self)
		Button:
			id:bucher
			text: 'Buchen'
			markup: True
			on_release: app.sayhello(self,self.parent.parent.name.text)


<PopupBox>:
	pop_up_text: _pop_up_text
	size_hint: .9, .5
	auto_dismiss: True
	title: 'Status'   

	BoxLayout:
		orientation: "vertical"
		Label:
			id: _pop_up_text
			text: ''

